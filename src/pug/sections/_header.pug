header.header
	//===================HEADER-MENU=======================
	.header-top
		.container
			.header-content
				a(href="index.html").logo
					img(src="./img/logo.png", width="94" height="99" alt="logo")
				
				//======================  ГЛАВНОЕ МЕНЮ  ============================================
				.main-menu#header-menu
					+header-menu([
						{title: 'Новости', link:"news.html"},
						{title: 'Визитная карточка',link:"about-us.html"},
						{title: 'Проекты',link:"our-projects.html"},
						{title: 'Навигатор',link:"our-nav.html"},
						{title: 'Библиотека',link:"our-libs.html"},
						{title: 'Медиацентр',link:"our-media.html"}
					])
				.header-column.d-flex
					//=================================================================================================
						кнопка авторизации, что бы скрыть иконку, надо к .login-button  добавить класс d-none 
					//==================================================================================================
					.login-button(frame-btn="register-modal")
						.ic-login
					
					//=================================================================================================
						аватар залогиненного пользователя  что бы скрыть иконку, надо к .login-avatar  добавить класс d-none 
					//==================================================================================================
					a(href="lk.html").login-avatar
						img(src="./img/avatar.jpg", width="44" height="44" alt="avatar")
						
					.menu-toggle#menu-toggle
						span
	
	//=================== HEADER FIRST SCREEN =======================
	.header-banner
		.container
			.header-banner__content
				.header-title
					.medi-up Социальный проект
					.h1 Команда
					.text-16 Авторский проект Дмитрия Бархатова
				.header-bg
					video( muted="muted" autoplay="autoplay" loop  playsinline preload="yes")
						source(src="video/video.mp4" type="video/mp4")
				.header-text
					p.text-18 Данный проект направлен на формирование всесторонне гармонично развитой личности и реализуемый на&nbsp;территории России с 2015 года
					.header-btn.d-flex
						a(href="#!").btn Регистрация
						a(href="#!").btn-outline Вход
