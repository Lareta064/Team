extends ../layouts/layout.pug

block content
	include ../sections/_register-header
	main
		//===================================================================
			Модальные окна имеют атрибут  frame-modal и по умолчанию имеют dispaly:none;
			Элемент, по клику на который оно отображается, имеет атрибут frame-btn
			По клику на frame-btn, frame-modal добавляется класс visible с dispaly:flex;
    
			*******************************************************************	
			окно АВТОРИЗАЦИЯ открывается по клику на элемент с атрибутом  frame-btn="auth-modal"
		//===================================================================
		
		.modal-frame-wrapper.width-740.visible(frame-modal="auth-modal")
			.icon-close(frame-close)
			.modal-frame
				.h6 Авторизация
				.modal-frame__body
					form(action="")
						
						//========== одно поле ===============
						.form-item
							.input-label Email
								span *
							input(type="text" name="" )
							.form-item__icon
								span.ic-edit
						
						//========== одно поле ===============
						.form-item.toggle-pass.tooltip-wrapper
							.input-label Пароль
								span *
							input(type="password" name="" )
							.form-item__icon
								span.ic-visible
								span.ic-hide.d-none
							
						//========== footer формы===============
						.form-footer
							.form-footer__btn.d-flex
								button.btn-46.btn.w-100(type="submit") Войти
								button.btn-46.btn-outline.w-100(type="button" frame-btn="reg-modal") Регистрация
								a(href="#!").back-link.text-14
									span.link Восстановить пароль
									span.ic-restore
	
	include ../sections/_footer
	

block variables


	-var title="Авторизация"